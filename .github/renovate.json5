{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  ignorePaths: [
    'spock-*/**',
  ],
  packageRules: [
    {
      matchCurrentValue: '/^2\\./',
      allowedVersions: '(,3.0)',
      matchPackageNames: [
        'org.codehaus.groovy:{/,}**',
      ],
    },
    {
      matchCurrentValue: '/^4\\./',
      allowedVersions: '(,5.0)',
      matchPackageNames: [
        'org.apache.groovy:{/,}**',
      ],
    },
    {
      matchCurrentValue: '/^4\\./',
      allowedVersions: '(,5.0)',
      matchPackageNames: [
        'org.mockito:{/,}**',
      ],
    },
    {
      matchCurrentVersion: '/-groovy-3\\.0$/',
      allowedVersions: '/-groovy-3\\.0$/',
      matchPackageNames: [
        'org.spockframework:spock-{/,}**',
      ],
    },
    {
      matchCurrentVersion: '/-groovy-4\\.0$/',
      allowedVersions: '/-groovy-4\\.0$/',
      matchPackageNames: [
        'org.spockframework:spock-{/,}**',
      ],
    },
  ],
}
